<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
            http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            WEB-INF/spring/root-context.xml
            WEB-INF/spring/spring-security.xml
        </param-value>
    </context-param>

    <!-- <context-param> <param-name>contextInitializerClasses</param-name>
        <param-value>org.eontechnologyy.and.eon.AppInitializer</param-value> </context-param> -->

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- Peer -->

    <servlet>
        <servlet-name>peerServlet</servlet-name>
        <servlet-class>org.eontechnology.and.eon.app.PeerServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>WEB-INF/spring/peer/servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>peerServlet</servlet-name>
        <url-pattern>/peer/v1/*</url-pattern>
    </servlet-mapping>

    <!-- Bot -->

    <servlet>
        <servlet-name>BotServlet</servlet-name>
        <servlet-class>org.eontechnology.and.eon.app.BotServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>WEB-INF/spring/bot/servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>BotServlet</servlet-name>
        <url-pattern>/bot/v1/*</url-pattern>
    </servlet-mapping>

    <!-- Blockchain Explorer -->

    <servlet>
        <servlet-name>explorerServlet</servlet-name>
        <servlet-class>org.eontechnology.and.eon.app.BotServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>WEB-INF/spring/explorer/servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>explorerServlet</servlet-name>
        <url-pattern>/explorer/v1/*</url-pattern>
    </servlet-mapping>


    <!-- Monitoring -->

    <servlet>
        <servlet-name>monitorServlet</servlet-name>
        <servlet-class>org.eontechnology.and.eon.app.PrometheusServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>WEB-INF/spring/prometheus/servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>4</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>monitorServlet</servlet-name>
        <url-pattern>/metrics</url-pattern>
    </servlet-mapping>

    <!-- Disable non-https traffic -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>securedapp</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <!-- Spring Security -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/metrics/*</url-pattern>
        <url-pattern>/explorer/*</url-pattern>
    </filter-mapping>

    <!-- gzip compression-->
    <filter>
        <filter-name>compressingFilter</filter-name>
        <filter-class>com.github.ziplet.filter.compression.CompressingFilter</filter-class>
        <init-param>
            <param-name>compressionThreshold</param-name>
            <param-value>128</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>compressingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>